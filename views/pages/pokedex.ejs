<table class="bordered highlight pokedex">
  <thead>
    <th></th>
    <th>ID</th>
    <th>Name</th>
    <th>Description</th>
  </thead>
  <tbody>
    <% for (let s of species) { %>
      <tr id="<%= s.id %>">
        <td class="center-align"><img
          <% if (+s.id <= 721) { %>
           src="http://www.pokestadium.com/sprites/xy/<%= s.image_name %>.gif"
           <% } else { %>
             src="https://img.pokemondb.net/sprites/sun-moon/dex/normal/<%= s.image_name %>.png"
           <% } %>
            alt="<%= s.name %>"></td>
        <td><%= s.id %></td>
        <td><%= s.name %></td>
        <td><%= s.description %></td>
      </tr>
    <% } %>
  </tbody>
</table>
